<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFD5D5"
    android:orientation="vertical"
    tools:context=".NewTaskAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="198dp"

        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">


        <TextView
            android:id="@+id/titlepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="28dp"
            android:text="Create a New Class"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="22sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark" />


            </LinearLayout>

<LinearLayout
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="-40dp"
    android:background="@drawable/bgitemschedule"
    android:paddingBottom="22dp"
    android:paddingTop="22dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/addclass"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Name of Class"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/titleschedule"
            android:inputType="text"
            android:hint="Class"
            android:background="@drawable/bginputtask"
            android:paddingLeft="12dp"
            android:maxLength="25"
            android:textColorHint="#B5B5B5"
            android:textColor="#00128C"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/addTeacher"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Name of Teacher"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/teacherschedule"
            android:maxLength="25"
            android:inputType="text"
            android:hint="Name"
            android:background="@drawable/bginputtask"
            android:paddingLeft="12dp"
            android:textColorHint="#B5B5B5"
            android:textColor="#00128C"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/addTime"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Time"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/timeschedule"
            android:inputType="text"
            android:hint="Time"
            android:maxLength="25"
            android:background="@drawable/bginputtask"
            android:paddingLeft="12dp"
            android:textColorHint="#B5B5B5"
            android:textColor="#00128C"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

    </LinearLayout>

</LinearLayout>

    <Button
        android:id="@+id/btnSaveTask"
        android:onClick="save"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="15dp"
        android:text="Create Now"
        android:textColor="#FFF"
        android:background="@drawable/bgbtnnew"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

    <Button
        android:id="@+id/btnCancel"
        android:onClick="cancelMethod"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:text="Cancel"
        android:textColor="#AFAFAF"
        android:background="@drawable/bgbtncancel"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

        </LinearLayout>